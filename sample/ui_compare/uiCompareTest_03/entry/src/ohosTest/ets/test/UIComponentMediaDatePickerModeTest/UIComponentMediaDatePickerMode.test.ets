  return new Promise<string>(resolve => setTimeout(resolve, ms));
}

export default function UIComponentMediaDatePickerMode() {
  describe('UIComponentMediaDatePickerMode', () => {
    beforeAll(() => {

    })
    beforeEach(() => {

    })

    afterEach(async (done: Function) => {
      if (Settings.windowClass == undefined) {
        return
      }
      Settings.windowClass.destroyWindow((err) => {
        if (err.code) {
          Logger.error(`[${TAG}_afterEach]`, `Failed to destroy the window. Cause : ${JSON.stringify(err)}`);
          return;
        }
        Logger.info(`[${TAG}_afterEach]`, `Succeeded in destroy the window.`);
      })
      await Utils.sleep(1000);
      done();
    })

    afterAll(() => {

    })

    /*
     * @tc.number  SUB_ACE_UI_COMPONENT_MEDIA_DATEPICKER_MODE_0010
     * @tc.name    SUB_ACE_UI_COMPONENT_MEDIA_DATEPICKER_MODE_0010
     * @tc.desc    Set DatePickerMode to DATE for DatePicker
     * @tc.level   0
     */
    it('SUB_ACE_UI_COMPONENT_MEDIA_DATEPICKER_MODE_0010', Level.LEVEL0, async (done: Function) => {
      TAG = 'SUB_ACE_UI_COMPONENT_MEDIA_DATEPICKER_MODE_0010';
      let pageName = 'UIComponentMediaDatePickerMode0010';
      Logger.info(`[${TAG}]`, `Case start.`);
      Settings.createWindow('testability/pages/UIComponentMediaDatePickerMode/' + pageName);
      let driver: Driver = Driver.create();
      let switchLunarButton: Component = await driver.waitForComponent(ON.id(pageName + '_01'), 1000);
      let dialogButton1: Component = await driver.waitForComponent(ON.id(pageName + '_02'), 1000);
      let dialogButton2: Component = await driver.waitForComponent(ON.id(pageName + '_03'), 1000);
      let point1 = await dialogButton1.getBoundsCenter();
      let point2 = await dialogButton2.getBoundsCenter();
      let switchPoint = await switchLunarButton.getBoundsCenter();
      await driver.waitForIdle(500, 1000);
      await windowSnap.snapShot(TAG + '_01');
      await dialogButton1.click();
      await driver.waitForIdle(4000, 5000);
      await windowSnap.snapShot(TAG + '_02');
      await driver.mouseMoveTo(point1);
      await driver.waitForIdle(4000, 5000);
      await driver.click(point1.x, point1.y);
      await driver.waitForIdle(4000, 5000);
      await driver.mouseMoveWithTrack(switchPoint, point2);
      await driver.waitForIdle(4000, 5000);
      await dialogButton2.click();
      await driver.waitForIdle(4000, 5000);
      await windowSnap.snapShot(TAG + '_03');
      await driver.mouseMoveWithTrack(point2, switchPoint);
      await driver.waitForIdle(4000, 5000);
      await driver.click(switchPoint.x, switchPoint.y);
      await driver.waitForIdle(4000, 5000);
      await driver.mouseMoveWithTrack(point1, switchPoint);
      await driver.waitForIdle(4000, 5000);
      await driver.mouseMoveTo(switchPoint);
      await driver.waitForIdle(4000, 5000);
      await driver.click(switchPoint.x, switchPoint.y);
      await driver.waitForIdle(4000, 5000);
      await windowSnap.snapShot(TAG + '_04');
      await Utils.sleep(1000);
      Logger.info(`[${TAG}]`, `Case finish.`);
      done();
    })

  })
}