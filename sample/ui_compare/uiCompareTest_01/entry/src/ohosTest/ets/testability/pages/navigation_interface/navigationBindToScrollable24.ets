/**
 * NavigationBindToScrollable24
 * 
 * 测试用例：SUB_ACE_UI_COMPONENT_NAV_NAVIGATION_BINDTOSCROLLABLE_0240
 * 测试目的：验证Navigation标题栏工具栏支持跟手滑动隐藏显示(一个Navigation下嵌套多个List场景)
 */

@Entry
@Component
struct NavigationBindToScrollable24 {
  private pathStack: NavPathStack = new NavPathStack();
  private firstListController: Scroller = new Scroller();
  private secondListController: Scroller = new Scroller();

  build() {
    Navigation(this.pathStack) {
      Column() {
        Text('用例编号：SUB_ACE_UI_COMPONENT_NAV_NAVIGATION_BINDTOSCROLLABLE_0240')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 10 });

        Text('Navigation标题栏工具栏支持跟手滑动隐藏显示(一个Navigation下嵌套多个List场景)')
          .fontSize(14)
          .fontColor('#666666')
          .margin({ bottom: 20 });

        Button('一个Navigation下存在2个List')
          .id('navMultiListBtn_24')
          .width(300)
          .height(50)
          .margin({ bottom: 10 })
          .onClick(() => {
            try {
              this.pathStack.pushDestination({ 
                name: 'pageOne', 
                param: null 
              });
            } catch (e) {
              console.error('pushDestination error:', e);
            }
          });
      }
      .width('100%')
      .height('100%')
      .padding(20)
      .backgroundColor('#FFFFFF')
    }
    .title('Navigation BindToScrollable Test')
    .toolbarConfiguration([
      {
        value: '工具栏',
        action: () => {}
      }
    ])
    .navDestination(PageOneBuilder)
  }
}

@Builder
export function PageOneBuilder(name: string, param: Object) {
  NavDestination() {
    PageOne()
  }
  .title('PageOne')
}

@Component
struct PageOne {
  private firstListController: Scroller = new Scroller();
  private secondListController: Scroller = new Scroller();
  private items: number[] = [1, 2, 3, 4, 5];

  build() {
    Column() {
      Button('push pageOne')
        .id('pushPageOneBtn_24')
        .width(200)
        .height(50)
        .margin({ bottom: 10 })
        .onClick(() => {
          // 可以继续push页面
        });

      List({ scroller: this.firstListController }) {
          ForEach(this.items, (item: number) => {
            ListItem() {
              Text(`第一个List Item ${item}`)
                .width('100%')
                .height(80)
                .backgroundColor('#E5E5E5')
                .textAlign(TextAlign.Center)
                .fontSize(16)
            }
          }, (item: number) => item.toString())
        }
        .id('firstListComponent_24')
        .width('100%')
        .height('45%')
        .scrollBar(BarState.Auto)
        .margin({ bottom: 10 })

      List({ scroller: this.secondListController }) {
          ForEach(this.items, (item: number) => {
            ListItem() {
              Text(`第二个List Item ${item}`)
                .width('100%')
                .height(80)
                .backgroundColor('#D5D5D5')
                .textAlign(TextAlign.Center)
                .fontSize(16)
            }
          }, (item: number) => item.toString())
        }
        .id('secondListComponent_24')
        .width('100%')
        .height('45%')
        .scrollBar(BarState.Auto)
      }
    .width('100%')
    .height('100%')
    .padding(20)
    .backgroundColor('#F5F5F5')
  }
}

