@Entry
@Component
struct BlurMaterialSeparatedLayer1090 {
  @State isShown: boolean = false;

  @Builder
  SubMenu() {
    Menu() {
      MenuItem({ content: "子菜单项1" })
      MenuItem({ content: "子菜单项2" })
    }
    .backgroundBlurStyle(BlurStyle.BACKGROUND_REGULAR)
  }

  @Builder
  MyMenu() {
    Menu() {
      MenuItem({ content: "菜单项1" })
      MenuItem({ content: "菜单项2" })
      MenuItem({ 
        content: "菜单项3",
        builder: (): void => this.SubMenu()
      })
    }
    .backgroundBlurStyle(BlurStyle.BACKGROUND_REGULAR)
  }

  build() {
    Column() {
      Text('菜单控制')
        .fontSize(24)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Button('bindMenu01')
        .id('bindMenu01Btn1090')
        .width(300)
        .height(50)
        .margin({ bottom: 10 })
        .onClick(() => {
          this.isShown = !this.isShown;
        })

      Button('050_STACK')
        .id('menuBtn1090')
        .width(300)
        .height(50)
        .margin({ bottom: 10 })
        .bindMenu(this.isShown, this.MyMenu, {
          showInSubWindow: true,
          enableArrow: true
        })
    }
    .width('100%')
    .height('100%')
    .padding(20)
    .justifyContent(FlexAlign.Center)
    .backgroundColor('#F5F5F5')
  }
}

