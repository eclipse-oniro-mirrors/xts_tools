/**
 * 测试用例0080页面
 * Swiper组件index=1边距布局测试 - Swiper布局依次为2、3、4，组件开始和结尾各有一部分1
 */
class SwiperIndicatorInteractiveDataSource21 implements IDataSource {
  private list: number[] = [];

  constructor(list: number[]) {
    this.list = list;
  }

  totalCount(): number {
    return this.list.length;
  }

  getData(index: number): number {
    return this.list[index];
  }

  registerDataChangeListener(listener: DataChangeListener): void {
  }

  unregisterDataChangeListener() {
  }
}

@Entry
@Component
struct swiperIndicatorInteractive21 {
  private swiperController: SwiperController = new SwiperController();
  private data: SwiperIndicatorInteractiveDataSource21 = new SwiperIndicatorInteractiveDataSource21([]);
  @State currentIndex: number = 1;

  aboutToAppear(): void {
    let list: number[] = [];
    for (let i = 1; i <= 4; i++) {
      list.push(i);
    }
    this.data = new SwiperIndicatorInteractiveDataSource21(list);
  }

  build() {
    Column() {
      // 页面标题
      Text('测试用例0080 - index=1边距布局测试')
        .height(50)
        .fontSize(16)
        .textAlign(TextAlign.Center)
        .fontColor(Color.Black)
        .width('100%')
        .border({ width: 1 })
        .lineHeight(20)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 8, bottom: 8 });

      // 状态信息显示
      Text(`当前页面: ${this.currentIndex + 1}, index: 1, 布局: 2、3、4，开始和结尾有1`)
        .height(35)
        .fontSize(12)
        .textAlign(TextAlign.Center)
        .fontColor(Color.Black)
        .width('100%')
        .border({ width: 1 })
        .lineHeight(16)
        .fontWeight(300)
        .margin({ bottom: 8 });

      // Swiper测试区域
      Swiper(this.swiperController) {
        LazyForEach(this.data, (item: string) => {
          Text('页面 ' + item.toString())
            .width('90%')
            .height(200)
            .backgroundColor(0xAFEEEE)
            .textAlign(TextAlign.Center)
            .fontSize(30)
            .borderRadius(10)
        }, (item: string) => item)
      }
      .cachedCount(2)
      .index(1)
      .autoPlay(false)
      .loop(true)
      .duration(1000)
      .itemSpace(10)
      .prevMargin(20)
      .nextMargin(20)
      .indicator(
        new DotIndicator()
          .itemWidth(12)
          .itemHeight(12)
          .selectedItemWidth(12)
          .selectedItemHeight(12)
          .color(Color.Gray)
          .selectedColor(Color.Blue))
      .onChange((index: number) => {
        console.info('测试用例0080 Swiper onChange:', index);
        this.currentIndex = index;
      })

      // 控制按钮区域
      Row({ space: 12 }) {
        Button('上一页')
          .id("swiperIndicatorInteractive21_01")
          .onClick(() => {
            this.swiperController.showPrevious();
          })
        Button('下一页')
          .id("swiperIndicatorInteractive21_02")
          .onClick(() => {
            this.swiperController.showNext();
          })
      }
      .margin({ top: 10 })

      Row({ space: 12 }) {
        Button('跳转页面1')
          .id("swiperIndicatorInteractive21_03")
          .onClick(() => {
            this.swiperController.changeIndex(0, SwiperAnimationMode.FAST_ANIMATION);
          })
        Button('跳转页面2')
          .id("swiperIndicatorInteractive21_04")
          .onClick(() => {
            this.swiperController.changeIndex(1, SwiperAnimationMode.FAST_ANIMATION);
          })
        Button('跳转页面4')
          .id("swiperIndicatorInteractive21_05")
          .onClick(() => {
            this.swiperController.changeIndex(3, SwiperAnimationMode.FAST_ANIMATION);
          })
      }
      .margin({ top: 10 })
    }
    .width('100%')
    .height('100%')
    .backgroundColor(Color.White)
    .padding({ left: 12, right: 12, top: 8, bottom: 8 });
  }
}
