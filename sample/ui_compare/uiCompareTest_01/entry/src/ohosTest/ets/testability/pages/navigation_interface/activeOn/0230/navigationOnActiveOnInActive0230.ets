/**
 * NavigationOnActiveOnInActive0230
 * 
 * 测试用例：SUB_ACE_UI_COMPONENT_NAV_NAVIGATION_ONACTIVEONINACTIVE_0230
 * 测试目的：NavDestination新增OnActive和OnInActive生命周期（栈操作一次调用pop*3）
 */

import { BasicStackOperation0230Builder } from './basicStackOperation0230';
import { PageOne0230Builder } from './pageOne0230';
import { PageTwo0230Builder } from './pageTwo0230';
import { PageThree0230Builder } from './pageThree0230';
import { PageFour0230Builder } from './pageFour0230';

@Builder
function DynamicBuilder0230(name: string, param: Object) {
  if (name === 'BasicStackOperation0230') {
    BasicStackOperation0230Builder(name, param);
  } else if (name === 'PageOne0230') {
    PageOne0230Builder(name, param);
  } else if (name === 'PageTwo0230') {
    PageTwo0230Builder(name, param);
  } else if (name === 'PageThree0230') {
    PageThree0230Builder(name, param);
  } else if (name === 'PageFour0230') {
    PageFour0230Builder(name, param);
  }
}

@Entry
@Component
struct NavigationOnActiveOnInActive0230 {
  private pathStack: NavPathStack = new NavPathStack();

  build() {
    Navigation(this.pathStack) {
      Column() {
        Text('Navigation基础场景')
          .fontSize(20)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 20 });

        Button('Navigation基础栈操作场景')
          .id('navigationBasicStackOperationBtn0230')
          .width(300)
          .height(50)
          .margin({ bottom: 10 })
          .onClick(() => {
            this.pathStack.pushPath({ name: 'BasicStackOperation0230', param: null });
          });
      }
      .width('100%')
      .height('100%')
      .padding(20)
      .justifyContent(FlexAlign.Center)
      .backgroundColor('#FFFFFF')
    }
    .title('Navigation基础场景')
    .navDestination(DynamicBuilder0230)
  }
}

