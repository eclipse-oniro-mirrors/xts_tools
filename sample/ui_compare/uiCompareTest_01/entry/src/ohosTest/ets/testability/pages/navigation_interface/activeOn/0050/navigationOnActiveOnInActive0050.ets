/**
 * NavigationOnActiveOnInActive0050
 * 
 * 测试用例：SUB_ACE_UI_COMPONENT_NAV_NAVIGATION_ONACTIVEONINACTIVE_0050
 * 测试目的：NavDestination新增OnActive和OnInActive生命周期（栈操作push接口，push STANDARD、DIALOG页面，使用POP_TO_SINGLETON）
 */

import { BasicStackOperation0050Builder } from './basicStackOperation0050';
import { PageOne0050Builder } from './pageOne0050';
import { PageTwo0050Builder } from './pageTwo0050';
import { PageThree0050Builder } from './pageThree0050';

@Builder
function DynamicBuilder0050(name: string, param: Object) {
  if (name === 'BasicStackOperation0050') {
    BasicStackOperation0050Builder(name, param);
  } else if (name === 'PageOne0050') {
    PageOne0050Builder(name, param);
  } else if (name === 'PageTwo0050') {
    PageTwo0050Builder(name, param);
  } else if (name === 'PageThree0050') {
    PageThree0050Builder(name, param);
  }
}

@Entry
@Component
struct NavigationOnActiveOnInActive0050 {
  private pathStack: NavPathStack = new NavPathStack();

  build() {
    Navigation(this.pathStack) {
      Column() {
        Text('Navigation基础场景')
          .fontSize(20)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 20 });

        Button('Navigation基础栈操作场景')
          .id('navigationBasicStackOperationBtn0050')
          .width(300)
          .height(50)
          .margin({ bottom: 10 })
          .onClick(() => {
            this.pathStack.pushPath({ name: 'BasicStackOperation0050', param: null });
          });
      }
      .width('100%')
      .height('100%')
      .padding(20)
      .justifyContent(FlexAlign.Center)
      .backgroundColor('#FFFFFF')
    }
    .title('Navigation基础场景')
    .navDestination(DynamicBuilder0050)
  }
}

