@Entry
@Component
struct DialogAlertInterface0160 {

  build() {
    Column() {
      Button('显示AlertDialog')
        .id('show_dialog_button_0160')
        .onClick(() => {
          AlertDialog.show({
            title: '标题',
            message: '这是一个测试对话框',
            confirm: {
              value: '确定',
              // style: $$,
              action: () => {
                console.info('确定按钮被点击')
              }
            },
            cancel: () => {
              console.info('取消按钮被点击')
            }
          })
        })
        .margin(20)
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Center)
    .alignItems(HorizontalAlign.Center)
  }
}
