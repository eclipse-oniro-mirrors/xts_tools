@Entry
@Component
struct ZindexMenubar0170 {
  @State dialogClickResult: string = ''
  @State selectedDate: Date = new Date('2024-06-15')

  aboutToAppear() {
    this.showCalendarPickerDialog()
  }

  showCalendarPickerDialog() {
    CalendarPickerDialog.show({
      selected: this.selectedDate,
      onAccept: (value: Date) => {
        this.dialogClickResult = `CalendarPickerDialog确定: ${value.getFullYear()}-${value.getMonth() + 1}-${value.getDate()}`
      },
      onCancel: () => {
        this.dialogClickResult = 'CalendarPickerDialog取消'
      },
      onChange: (value: Date) => {
        this.dialogClickResult = `日期改变: ${value.getFullYear()}-${value.getMonth() + 1}-${value.getDate()}`
      }
    })
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_ATTRIBUTES_ZINDEX_MENUBAR_0170')
        .fontSize(16)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20, bottom: 10 })

      Text('showInSubWindow=true, CalendarPickerDialog')
        .fontSize(14)
        .fontColor(Color.Gray)
        .margin({ bottom: 10 })

      Button('打开CalendarPickerDialog')
        .id('zindex_menubar_0170_open')
        .onClick(() => {
          this.showCalendarPickerDialog()
        })
        .margin(10)

      Button('MenuBar功能按钮')
        .id('zindex_menubar_0170_menubar')
        .onClick(() => {
          this.dialogClickResult = 'MenuBar按钮被点击'
        })
        .margin(10)

      Text(this.dialogClickResult)
        .id('zindex_menubar_0170_result')
        .fontSize(14)
        .fontColor(Color.Blue)
        .margin({ top: 20 })
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Start)
    .alignItems(HorizontalAlign.Center)
    .padding(20)
  }
}

