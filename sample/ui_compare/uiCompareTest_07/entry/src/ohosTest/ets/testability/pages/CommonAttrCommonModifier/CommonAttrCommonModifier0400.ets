          .margin({ bottom: 15 })

        Row() {
          Column().width(40).height(40).backgroundColor('#FF0000').margin(5) // çº¢è‰²
          Column().width(40).height(40).backgroundColor('#00FF00').margin(5) // ç»¿è‰²
          Column().width(40).height(40).backgroundColor('#0000FF').margin(5) // è“è‰²
          Column().width(40).height(40).backgroundColor('#FFFF00').margin(5) // é»„è‰²
