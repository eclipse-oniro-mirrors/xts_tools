@Entry
@Component
struct CommonAttrCommonModifier1130 {
  @State currentIndex: number = 0
  
  private linearGradientValues: Array<string> = [
    "angle: 90",
    "angle: -1",
    "no angle",
    "undefined direction",
    "undefined color",
    "repeating: true",
    "repeating: true (duplicate)"
  ]

  build() {
    Column() {
      Text('LinearGradient Test')
        .fontSize(24)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text(`Current Index: ${this.currentIndex}`)
        .fontSize(16)
        .margin({ bottom: 10 })

      Text(`LinearGradient: ${this.linearGradientValues[this.currentIndex]}`)
        .fontSize(12)
        .margin({ bottom: 20 })
        .textAlign(TextAlign.Center)

      // 测试组件
      Column() {
        Text('Test Component')
          .fontSize(18)
          .fontColor(Color.White)
          .padding(20)
          .borderRadius(10)
          .linearGradient(this.getCurrentLinearGradient())
          .id('lineargradient_component_commonmodifier_1130')
      }
      .justifyContent(FlexAlign.Center)
      .height(200)
      .width('80%')
      .backgroundColor(Color.Gray)
      .borderRadius(10)

      Row() {
        Button('index--')
          .onClick(() => {
            if (this.currentIndex > 0) {
              this.currentIndex--
            }
          })
          .id('index_decrease_button_commonmodifier_1130')
          .margin({ right: 10 })

        Button('index++')
          .onClick(() => {
            if (this.currentIndex < this.linearGradientValues.length - 1) {
              this.currentIndex++
            }
          })
          .id('index_increase_button_commonmodifier_1130')
          .margin({ left: 10 })
      }
      .margin({ top: 20 })
    }
    .width('100%')
    .height('100%')
    .padding(20)
    .justifyContent(FlexAlign.Center)
  }

  getCurrentLinearGradient(): LinearGradient {
    const baseColors: Array<[ResourceColor, number]> = [[0xff0000, 0.0], [0x0000ff, 0.3], [0xffff00, 1.0]]
    
    switch (this.currentIndex) {
      case 0:
        return {
          angle: 90,
          colors: baseColors,
          direction: GradientDirection.Left,
          repeating: false
        }
      case 1:
        return {
          angle: -1,
          colors: baseColors,
          direction: GradientDirection.Left,
          repeating: false
        }
      case 2:
        return {
          colors: baseColors,
          direction: GradientDirection.Left,
          repeating: false
        }
      case 3:
        return {
          colors: baseColors,
          repeating: false
        }
      case 4:
        return {
          colors: [[0xff0000, 0.0], [0xffff00, 1.0]],
          direction: GradientDirection.Left,
          repeating: false
        }
      case 5:
      case 6:
        return {
          colors: baseColors,
          direction: GradientDirection.Left,
          repeating: true
        }
      default:
        return {
          colors: baseColors,
          direction: GradientDirection.Left,
          repeating: false
        }
    }
  }
}