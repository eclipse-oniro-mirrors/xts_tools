@Entry
@Component
struct CommonAttrCommonModifier1750 {
  @State currentIndex: number = 0

  build() {
    Column() {
      Text('BorderImage Test (Resource Colors Round)')
        .fontSize(20)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text(`Current Index: ${this.currentIndex}`)
        .fontSize(16)
        .margin({ bottom: 10 })

      Column() {
        Text('Test Component')
          .fontSize(18)
          .width(200)
          .height(100)
          .textAlign(TextAlign.Center)
          .borderImage({
            source: {
              colors: [[0xFF0000, 0.0], [0xD3E0DC, 0.3], [0xFF0000FF, 1.0]]
            },
            slice: { top: 40, bottom: 40, left: 40, right: 40 },
            width: { top: "40px", bottom: "40px", left: "40px", right: "40px" },
            outset: 0,
            repeat: RepeatMode.Round,
            fill: false
          })
          .id('borderimage_component_commonmodifier_1750')
      }
      .justifyContent(FlexAlign.Center)
      .height(200)
      .margin({ bottom: 20 })

      Row() {
        Button('index--')
          .onClick(() => {
            if (this.currentIndex > 0) {
              this.currentIndex--
            }
          })
          .id('index_decrease_button_commonmodifier_1750')
          .margin({ right: 10 })

        Button('index++')
          .onClick(() => {
            if (this.currentIndex < 0) {
              this.currentIndex++
            }
          })
          .id('index_increase_button_commonmodifier_1750')
          .margin({ left: 10 })
      }
      .margin({ top: 20 })
    }
    .width('100%')
    .height('100%')
    .padding(20)
    .justifyContent(FlexAlign.Center)
  }
}

