@Entry
@Component
struct SpecificationsTransition0070 {
  @State selectedDuration: number = 10000
  @State selectedTransition: TransitionEffect = TransitionEffect.translate({ x: 100, y: 100 })
  @State showDialog: boolean = false

  aboutToAppear() {
    // 自动触发弹窗显示
    setTimeout(() => {
      this.showAlertDialog()
    }, 500)
  }

  showAlertDialog() {
    AlertDialog.show({
      title: 'AlertDialog测试',
      message: '这是一个测试AlertDialog动画的弹窗',
      autoCancel: true,
      alignment: DialogAlignment.Center,
      showInSubWindow: false,
      isModal: true,
      transition: this.selectedTransition,
      primaryButton: {
        value: '确认',
        action: () => {
          console.info('AlertDialog primary button clicked')
        }
      },
      secondaryButton: {
        value: '取消',
        action: () => {
          console.info('AlertDialog secondary button clicked')
        }
      },
      cancel: () => {
        console.info('AlertDialog cancelled')
      }
    })
  }

  build() {
    Column() {
      Text('AlertDialog动画测试')
        .fontSize(24)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20, bottom: 30 })

      // Duration选择区域
      Text('Duration设置')
        .fontSize(18)
        .fontWeight(FontWeight.Medium)
        .margin({ bottom: 10 })

      Button('Duration_10000_Index')
        .id('button_duration_10000_index')
        .fontSize(16)
        .width('80%')
        .margin({ bottom: 10 })
        .onClick(() => {
          this.selectedDuration = 10000
          console.info('Duration set to 10000ms')
        })
        .backgroundColor(this.selectedDuration === 10000 ? Color.Blue : Color.Gray)

      Divider()
        .strokeWidth(2)
        .color(Color.Gray)
        .margin({ top: 20, bottom: 20 })

      // Transition选择区域
      Text('Transition设置')
        .fontSize(18)
        .fontWeight(FontWeight.Medium)
        .margin({ bottom: 10 })

      Button('Duration_10000_Translate')
        .id('button_duration_10000_translate')
        .fontSize(16)
        .width('80%')
        .margin({ bottom: 10 })
        .onClick(() => {
          this.selectedTransition = TransitionEffect.translate({ x: 100, y: 100 })
          console.info('Transition set to Translate')
        })

      Divider()
        .strokeWidth(2)
        .color(Color.Gray)
        .margin({ top: 20, bottom: 20 })

      // 弹窗触发按钮
      Button('AlertDialog: autoCancel_True')
        .id('button_alert_dialog_auto_cancel_true')
        .fontSize(18)
        .width('80%')
        .height(50)
        .margin({ bottom: 20 })
        .onClick(() => {
          this.showAlertDialog()
        })
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Start)
    .alignItems(HorizontalAlign.Center)
    .padding(20)
  }
}
