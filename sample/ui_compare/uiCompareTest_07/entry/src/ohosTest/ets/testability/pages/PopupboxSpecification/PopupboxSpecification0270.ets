@Entry
@Component
struct PopupboxSpecification0270 {
  @State isPromptVisible: boolean = false
  @State inputText: string = ''

  build() {
    Column() {
      Button('点击弹出有按钮prompt弹窗')
        .id('popup_button_0270')
        .onClick(() => {
          this.isPromptVisible = true
        })
        .margin({ top: 50 })
      
      if (this.inputText) {
        Text(`输入内容: ${this.inputText}`)
          .fontSize(16)
          .margin({ top: 20 })
      }
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Center)
    .backgroundColor(Color.White)
    .bindContentCover(this.isPromptVisible, this.promptDialog, {
      modalTransition: ModalTransition.NONE,
      backgroundColor: Color.Transparent,
      onAppear: () => {
        console.info('Prompt dialog appeared')
      },
      onDisappear: () => {
        this.isPromptVisible = false
      }
    })
  }

  @Builder
  promptDialog() {
    Column() {
      Text('输入提示')
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 15 })
      
      Text('这是一个有按钮prompt弹窗，有蒙层')
        .fontSize(14)
        .textAlign(TextAlign.Center)
        .margin({ bottom: 20 })
      
      TextInput({ placeholder: '请输入内容', text: this.inputText })
        .width('100%')
        .height(40)
        .fontSize(16)
        .borderRadius(4)
        .backgroundColor(Color.White)
        .border({ width: 1, color: Color.Gray })
        .onChange((value: string) => {
          this.inputText = value
        })
        .margin({ bottom: 20 })
      
      Row() {
        Button('取消')
          .fontSize(14)
          .backgroundColor(Color.Gray)
          .onClick(() => {
            this.isPromptVisible = false
          })
          .margin({ right: 10 })
        
        Button('确定')
          .fontSize(14)
          .backgroundColor(Color.Blue)
          .onClick(() => {
            this.isPromptVisible = false
          })
      }
      .justifyContent(FlexAlign.Center)
    }
    .width(280)
    .padding(20)
    .backgroundColor(Color.White)
    .borderRadius(8)
    .shadow({ radius: 10, color: Color.Gray, offsetX: 0, offsetY: 2 })
  }
}
