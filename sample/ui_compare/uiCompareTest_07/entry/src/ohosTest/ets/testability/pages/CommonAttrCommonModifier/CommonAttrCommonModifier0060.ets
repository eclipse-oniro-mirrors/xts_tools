@Entry
@Component
struct CommonAttrCommonModifier0060 {
  @State currentIndex: number = 0
  
  private flexGrowValues: Array<number> = [
    1,
    3,
    2,
    0,
    999999,
    -555,
    1.66
  ]

  build() {
    Column() {
      Text('FlexGrow Test')
        .fontSize(24)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text(`Current Index: ${this.currentIndex}`)
        .fontSize(16)
        .margin({ bottom: 10 })

      Text(`FlexGrow Value: ${this.flexGrowValues[this.currentIndex]}`)
        .fontSize(14)
        .margin({ bottom: 20 })
        .textAlign(TextAlign.Center)

      // 创建一个Flex容器来测试flexGrow效果
      Column() {
        Text('Flex Container (Row Direction)')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 10 })

        Flex({ direction: FlexDirection.Row, justifyContent: FlexAlign.Start }) {
          Column() {
            Text('Item 1')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .height(80)
          .backgroundColor(Color.Blue)
          .justifyContent(FlexAlign.Center)
          .flexGrow(1)

          Column() {
            Text('Test Item')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .height(80)
          .backgroundColor(Color.Red)
          .justifyContent(FlexAlign.Center)
          .flexGrow(this.flexGrowValues[this.currentIndex])
          .id('flexgrow_component_commonmodifier_0060')

          Column() {
            Text('Item 2')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .height(80)
          .backgroundColor(Color.Green)
          .justifyContent(FlexAlign.Center)
          .flexGrow(1)
        }
        .width(350)
        .height(100)
        .backgroundColor('#F0F0F0')
        .border({ width: 2, color: Color.Gray })
      }
      .margin({ top: 20, bottom: 30 })

      // 添加另一个测试场景：Column方向的Flex
      Column() {
        Text('Flex Container (Column Direction)')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 10 })

        Flex({ direction: FlexDirection.Column, justifyContent: FlexAlign.Start }) {
          Row() {
            Text('Item 1')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .width(200)
          .backgroundColor(Color.Blue)
          .justifyContent(FlexAlign.Center)
          .flexGrow(1)

          Row() {
            Text('Test Item')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .width(200)
          .backgroundColor(Color.Red)
          .justifyContent(FlexAlign.Center)
          .flexGrow(this.flexGrowValues[this.currentIndex])

          Row() {
            Text('Item 2')
              .fontSize(12)
              .fontColor(Color.White)
          }
          .width(200)
          .backgroundColor(Color.Green)
          .justifyContent(FlexAlign.Center)
          .flexGrow(1)
        }
        .width(250)
        .height(200)
        .backgroundColor('#F0F0F0')
        .border({ width: 2, color: Color.Gray })
      }
      .margin({ bottom: 30 })

      Text('Note: FlexGrow determines how much space items should grow')
        .fontSize(12)
        .fontColor(Color.Gray)
        .margin({ bottom: 20 })

      Row() {
        Button('index--')
          .onClick(() => {
            if (this.currentIndex > 0) {
              this.currentIndex--
            }
          })
          .id('index_decrease_button_commonmodifier_0060')
          .margin({ right: 10 })

        Button('index++')
          .onClick(() => {
            if (this.currentIndex < this.flexGrowValues.length - 1) {
              this.currentIndex++
            }
          })
          .id('index_increase_button_commonmodifier_0060')
          .margin({ left: 10 })
      }
      .margin({ top: 20 })
    }
    .width('100%')
    .height('100%')
    .padding(20)
    .justifyContent(FlexAlign.Center)
  }
}
