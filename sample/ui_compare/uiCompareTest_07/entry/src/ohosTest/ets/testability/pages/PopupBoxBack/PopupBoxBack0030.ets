@Entry
@Component
struct PopupBoxBack0030 {
  @State isShowActionSheet: boolean = false
  @State dismissReason: string = ""
  @State dismissReasonCode: number = -1
  @State dismissCallbackTriggered: boolean = false
  private richEditorController: RichEditorController = new RichEditorController()

  build() {
    Column() {
      Text("ActionSheet autoCancel=false测试")
        .fontSize(20)
        .margin(20)

      Button("ActionSheet3")
        .id("show_actionsheet_back_0030")
        .margin(20)
        .onClick(() => {
          this.isShowActionSheet = true
          // 重置状态
          this.dismissCallbackTriggered = false
          this.dismissReason = ""
          this.dismissReasonCode = -1
        })

      Text(`Dismiss Callback Triggered: ${this.dismissCallbackTriggered}`)
        .fontSize(16)
        .margin(10)

      Text(`Dismiss Reason Code: ${this.dismissReasonCode}`)
        .fontSize(16)
        .margin(10)

      Text(`Dismiss Reason: ${this.dismissReason}`)
        .fontSize(16)
        .margin(10)

      RichEditor({ controller: this.richEditorController })
        .id("rich_editor_back_0030")
        .width("90%")
        .height(100)
        .margin(20)
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Start)
    .bindSheet(this.isShowActionSheet, this.actionSheetBuilder(), {
      height: 300,
      showClose: false,
      dragBar: false,
      enableOutsideInteractive: false,  // 相当于autoCancel=false
      onWillDismiss: (dismissDialog: DismissDialogAction) => {
        if (dismissDialog.reason === DismissReason.PRESS_BACK) {
          // PRESS_BACK时触发dismiss回调并关闭弹窗
          dismissDialog.dismiss()
          this.dismissCallbackTriggered = true
          this.dismissReasonCode = dismissDialog.reason
          this.dismissReason = "PRESS_BACK (0)"
          this.isShowActionSheet = false
        } else if (dismissDialog.reason === DismissReason.TOUCH_OUTSIDE) {
          // TOUCH_OUTSIDE时由于autoCancel=false，不会触发dismiss回调，弹窗不关闭
          // 这里不调用dismissDialog.dismiss()，也不关闭弹窗
          this.dismissCallbackTriggered = false
        } else {
          // 其他情况正常关闭
          this.isShowActionSheet = false
        }
      }
    })
  }

  @Builder
  actionSheetBuilder() {
    Column() {
      Text("ActionSheet Test")
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin(10)
      
      Text("Select an option")
        .fontSize(14)
        .margin(10)

      Button("Option 1")
        .width("80%")
        .margin(5)
        .onClick(() => {
          this.isShowActionSheet = false
        })

      Button("Option 2")
        .width("80%")
        .margin(5)
        .onClick(() => {
          this.isShowActionSheet = false
        })

      Button("Option 3")
        .width("80%")
        .margin(5)
        .onClick(() => {
          this.isShowActionSheet = false
        })
    }
    .padding(20)
  }
}
