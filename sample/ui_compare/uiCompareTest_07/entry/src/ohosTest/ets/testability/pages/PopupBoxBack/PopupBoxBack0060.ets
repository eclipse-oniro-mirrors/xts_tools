@Entry
@Component
struct PopupBoxBack0060 {
  @State isShowAlertDialog: boolean = false
  @State dismissReason: string = ""
  @State dismissReasonCode: number = -1
  @State dismissCallbackTriggered: boolean = false
  private richEditorController: RichEditorController = new RichEditorController()

  build() {
    Column() {
      Text("AlertDialog autoCancel=false测试")
        .fontSize(20)
        .margin(20)

      Button("AlertDialog3")
        .id("show_alertdialog_back_0060")
        .margin(20)
        .onClick(() => {
          this.isShowAlertDialog = true
        })

      Button("Reset")
        .id("reset_button_back_0060")
        .margin(20)
        .onClick(() => {
          // 重置状态
          this.dismissCallbackTriggered = false
          this.dismissReason = ""
          this.dismissReasonCode = -1
        })

      Text(`Dismiss Callback Triggered: ${this.dismissCallbackTriggered}`)
        .fontSize(16)
        .margin(10)

      Text(`Dismiss Reason Code: ${this.dismissReasonCode}`)
        .fontSize(16)
        .margin(10)

      Text(`Dismiss Reason: ${this.dismissReason}`)
        .fontSize(16)
        .margin(10)

      RichEditor({ controller: this.richEditorController })
        .id("rich_editor_back_0060")
        .width("90%")
        .height(100)
        .margin(20)
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Start)
    .bindContentCover(this.isShowAlertDialog, this.alertDialogBuilder(), {
      modalTransition: ModalTransition.NONE,
      onWillDismiss: (dismissDialog: DismissDialogAction) => {
        if (dismissDialog.reason === DismissReason.PRESS_BACK) {
          // PRESS_BACK时触发dismiss回调并关闭弹窗
          dismissDialog.dismiss()
          this.dismissCallbackTriggered = true
          this.dismissReasonCode = dismissDialog.reason
          this.dismissReason = "PRESS_BACK (0)"
          this.isShowAlertDialog = false
        } else if (dismissDialog.reason === DismissReason.TOUCH_OUTSIDE) {
          // TOUCH_OUTSIDE时由于autoCancel=false的效果，不会触发dismiss回调，弹窗不关闭
          // 这里不调用dismissDialog.dismiss()，也不关闭弹窗
          this.dismissCallbackTriggered = false
        } else {
          // 其他情况正常关闭
          this.isShowAlertDialog = false
        }
      }
    })
  }

  @Builder
  alertDialogBuilder() {
    Column() {
      Text("警告")
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin(10)
      
      Text("这是一个警告弹窗")
        .fontSize(14)
        .margin(10)

      Row() {
        Button("确认")
          .width("40%")
          .margin(10)
          .onClick(() => {
            this.isShowAlertDialog = false
          })
      }
      .justifyContent(FlexAlign.Center)
    }
    .width(300)
    .padding(20)
    .backgroundColor(Color.White)
    .borderRadius(10)
    .shadow({ radius: 10, color: Color.Gray, offsetX: 0, offsetY: 2 })
  }
}
