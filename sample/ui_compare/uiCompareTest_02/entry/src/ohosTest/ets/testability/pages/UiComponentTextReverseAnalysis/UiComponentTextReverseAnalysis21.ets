@Entry
@Component
struct UiComponentTextReverseAnalysis21 {
  @State testId: string = 'SUB_ACE_UI_COMPONENT_TEXT_REVERSEANALYSIS_0570';
  @State message: string = 'Hello World';
  @State value: string = 'Hello World';

  build() {
    Scroll() {
      Column({ space: 20 }) {
        Text('测试用例: SUB_ACE_UI_COMPONENT_TEXT_REVERSEANALYSIS_0570')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .fontColor('#FF5722')
          .width('100%')
          .textAlign(TextAlign.Center)
          .margin({ top: 20 })
          .fontStyle(FontStyle.Italic)

        Column({ space: 15 }) {
          Text('TextInput组件设置12w字文本测试:')
            .fontSize(14)
            .fontWeight(FontWeight.Bold)
            .fontColor('#4CAF50')
            .width('100%')
            .textAlign(TextAlign.Start)
            .fontStyle(FontStyle.Italic)

          Text(this.message)
            .fontSize(50)
            .fontWeight(FontWeight.Bold)
            .onClick(() => {
              let str = '';
              for (let index = 0; index < 120000; index++) { // 模拟12万字字符串
                str += 'A';
              }
              this.value = str;
              console.info('Text length:', this.value.length);
            })
            .id('UiComponentTextReverseAnalysis21_01')
            .width('100%')
            .marqueeOptions({
              start: true,
              fromStart: true,
              step: 6,
              loop: -1,
              delay: 0,
              fadeout: false,
              marqueeStartPolicy: MarqueeStartPolicy.DEFAULT
            })
            .textAlign(TextAlign.Center)
            .backgroundColor('#E3F2FD')
            .padding(20)
            .borderRadius(10)

          TextInput({ text: this.value })
            .width('100%')
            .height(100)
            .id('UiComponentTextReverseAnalysis21_02')
        }
        .width('90%')
        .padding(15)
        .backgroundColor('#E8F5E9')
        .borderRadius(10)

        Column({ space: 8 }) {
          Text('测试预期:')
            .fontSize(16)
            .fontWeight(FontWeight.Bold)
            .fontStyle(FontStyle.Italic)
            .fontColor('#FF5722')
            .width('100%')
            .textAlign(TextAlign.Center)

          Text('1. 点击文本后，TextInput输入框正确显示12万字内容')
            .fontSize(13)
            .fontColor('#444444')
            .fontStyle(FontStyle.Italic)
            .width('100%')
            .textAlign(TextAlign.Start)

          Text('2. 无崩溃，正确显示')
            .fontSize(13)
            .fontColor('#444444')
            .fontStyle(FontStyle.Italic)
            .width('100%')
            .textAlign(TextAlign.Start)

          Divider()
            .margin(
              {
                top: 5,
                bottom: 5
              })

          Text('注意: TextInput组件设置文本内容12万字。')
            .fontSize(12)
            .fontColor('#FF5722')
            .fontStyle(FontStyle.Italic)
            .width('100%')
            .textAlign(TextAlign.Start)
            .fontWeight(FontWeight.Bold)
        }
        .width('90%')
        .padding(15)
        .backgroundColor('#FFF3E0')
        .borderRadius(10)

        Column({ space: 8 }) {
          Text('测试参数:')
            .fontSize(14)
            .fontStyle(FontStyle.Italic)
            .fontWeight(FontWeight.Bold)
            .fontColor('#607D8B')
            .width('100%')
            .textAlign(TextAlign.Start)

          Text('• 点击文本')
            .fontSize(13)
            .fontColor('#666666')
            .fontStyle(FontStyle.Italic)
            .width('100%')
            .textAlign(TextAlign.Start)

          Text('• 查看TextInput输入框是否正确显示')
            .fontSize(13)
            .fontColor('#666666')
            .fontStyle(FontStyle.Italic)
            .width('100%')
            .textAlign(TextAlign.Start)
        }
        .width('90%')
        .padding(15)
        .backgroundColor('#ECEFF1')
        .borderRadius(10)
      }
      .width('100%')
      .padding({ bottom: 30 })
    }
    .width('100%')
    .height('100%')
    .backgroundColor('#FAFAFA')
  }
}

