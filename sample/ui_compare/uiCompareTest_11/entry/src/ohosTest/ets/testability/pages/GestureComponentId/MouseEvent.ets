/**
 * 交互框架 Sheet3 - 组件响应鼠标事件，悬浮/点击组件信息获取正确（0450/0460）
 */
@Entry
@Component
struct MouseEventPage {
  @State inputLog: string = '';
  @State log: string = '';

  build() {
    Column() {
      Text('MouseEvent').fontSize(16).margin(8)
      Text(this.inputLog ? '输入: ' + this.inputLog : '输入: (鼠标悬浮/点击各组件后显示)').fontSize(12).fontColor(Color.Blue).margin(6)
      Button('button').id('button').onMouse((e?: MouseEvent) => { if (e) { this.inputLog = '鼠标点击/悬浮 button'; this.log = '检查结果 id:button area:热区'; } }).margin(4)
      Menu().id('Menu').margin(4)
      TextArea({ placeholder: 'TextArea' }).id('TextArea').height(60).onMouse((e?: MouseEvent) => { if (e) { this.inputLog = '鼠标点击/悬浮 TextArea'; this.log = '检查结果 id:TextArea area:热区'; } }).margin(4)
      Text(this.log ? this.log : '检查结果: (悬浮/点击button/TextArea后显示id与area)').fontSize(12).fontColor(Color.Red).margin(8)
    }
    .width('100%')
    .height('100%')
  }
}
