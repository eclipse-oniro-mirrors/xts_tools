// 测试用例: SUB_ACE_UI_COMPONENT_MEDIA_VIDEO_HSP_0050
// 预期结果: 替换异常hsp包(视频路径不存在)后视频获取不到，无法播放
// 自动化程度: 30% - 需要手动替换异常hsp包验证

import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@Component
struct VideoHsp0050 {
  @State message: string = 'hap引用hsp视频资源(异常包)'
  @State logs: string[] = []
  @State hasError: boolean = false

  private addLog(log: string): void {
    const timestamp = new Date().toLocaleTimeString()
    this.logs.unshift(`[${timestamp}] ${log}`)
    hilog.info(0x0000, 'VideoHsp0050', log)
    if (this.logs.length > 15) {
      this.logs.pop()
    }
  }

  build() {
    Column() {
      Text(this.message)
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20, bottom: 10 })
        .id('title')

      Text('替换异常hsp包(视频路径不存在)')
        .fontSize(12)
        .fontColor(Color.Gray)
        .margin({ bottom: 10 })

      Text('预期: 视频资源获取不到，无法播放--可能闪退')
        .fontSize(11)
        .fontColor(Color.Red)
        .margin({ bottom: 20 })

      // 模拟视频区域
      Column() {
        if (this.hasError) {
          Text('⚠️ 视频加载失败')
            .fontSize(16)
            .fontColor(Color.Red)
        } else {
          Image($r('app.media.icon'))
            .width(100)
            .height(100)
        }
      }
      .width('90%')
      .height(180)
      .backgroundColor('#333333')
      .id('videoArea')
      .justifyContent(FlexAlign.Center)

      Row({ space: 15 }) {
        Button('模拟播放')
          .onClick(() => {
            this.addLog('尝试播放...')
          })
          .id('playBtn')

        Button('模拟错误')
          .onClick(() => {
            this.hasError = true
            this.addLog('错误: 视频资源无法加载')
          })
          .id('errorBtn')
      }
      .margin({ top: 15, bottom: 15 })

      Text('测试步骤:')
        .fontSize(14)
        .fontWeight(FontWeight.Medium)
        .width('90%')
        .textAlign(TextAlign.Start)

      Text('1. 确认视频正常播放')
        .fontSize(11)
        .fontColor(Color.Gray)
        .width('90%')

      Text('2. 替换hsp包(视频路径不存在的异常包)')
        .fontSize(11)
        .fontColor(Color.Gray)
        .width('90%')

      Text('3. 重新运行，验证视频无法播放')
        .fontSize(11)
        .fontColor(Color.Gray)
        .width('90%')
        .margin({ bottom: 10 })

      Text('日志:')
        .fontSize(14)
        .fontWeight(FontWeight.Medium)
        .width('90%')
        .textAlign(TextAlign.Start)

      Scroll() {
        Column() {
          ForEach(this.logs, (log: string, index: number) => {
            Text(log)
              .fontSize(11)
              .fontColor(Color.Gray)
              .width('100%')
              .textAlign(TextAlign.Start)
          })
        }
        .width('100%')
      }
      .width('90%')
      .height(80)
      .backgroundColor('#F5F5F5')
      .padding(10)
    }
    .width('100%')
    .height('100%')
    .padding(20)
  }
}
