/**
 * @tc.name: SUB_ACE_UI_COMPONENT_MEDIA_Dark_COLOR_MODE_0030
 * @tc.desc: 手机设置深色模式，Badge在手机应用中的展示效果
 * @tc.level: Level 3
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct DarkColorMode0030 {
  @Local testLog: string = '';

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'DarkColorMode0030', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded - Badge应用场景深色模式测试');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_MEDIA_Dark_COLOR_MODE_0030')
        .fontSize(14)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('Badge应用场景-深色模式')
        .fontSize(12)
        .margin({ bottom: 20 })

      Row() {
        Badge({
          count: 99,
          position: BadgePosition.RightTop,
          style: { badgeColor: Color.Red, badgeSize: 18 }
        }) {
          Column() {
            Image($r('app.media.icon'))
              .width(50)
              .height(50)
            Text('购物')
              .fontSize(10)
          }
        }
        .id('badge_app')

        Badge({
          value: '新',
          position: BadgePosition.RightTop,
          style: { badgeColor: Color.Orange, badgeSize: 18 }
        }) {
          Column() {
            Image($r('app.media.icon'))
              .width(50)
              .height(50)
            Text('消息')
              .fontSize(10)
          }
        }
        .margin({ left: 30 })
      }

      Text('测试说明：')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 30 })

      Text('1. 设置手机模式为深色模式\n2. 下载淘宝，查看角标颜色\n3. 期望: 角标颜色正常\n4. 不受手机颜色模式影响')
        .fontSize(11)
        .fontColor('#666666')

      Scroll() {
        Text(this.testLog)
          .fontSize(10)
          .fontColor('#333333')
          .id('log_text')
      }
      .height(80)
      .width('100%')
      .backgroundColor('#F5F5F5')
      .padding(5)
      .margin({ top: 10 })
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}

