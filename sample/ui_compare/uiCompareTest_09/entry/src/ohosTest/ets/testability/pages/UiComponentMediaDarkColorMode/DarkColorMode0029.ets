/**
 * @tc.name: SUB_ACE_UI_COMPONENT_MEDIA_Dark_COLOR_MODE_0029
 * @tc.desc: 手机设置深色模式，Badge效果展示
 * @tc.level: Level 3
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct DarkColorMode0029 {
  @Local testLog: string = '';

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'DarkColorMode0029', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded - Badge深色模式测试');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_MEDIA_Dark_COLOR_MODE_0029')
        .fontSize(14)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('Badge组件-深色模式')
        .fontSize(12)
        .margin({ bottom: 20 })

      Badge({
        count: 5,
        position: BadgePosition.RightTop,
        style: { badgeColor: Color.Red, badgeSize: 16 }
      }) {
        Button('消息')
          .id('badge_button')
          .width(80)
          .height(40)
      }
      .id('badge')

      Text('角标颜色: 红色')
        .fontSize(12)
        .margin({ top: 20 })

      Text('测试说明：')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20 })

      Text('1. 设置手机模式为深色模式\n2. 编译运行代码\n3. 期望: 圆角标设置生效\n4. 背景颜色等正常展示\n5. 不受手机颜色模式影响')
        .fontSize(11)
        .fontColor('#666666')

      Scroll() {
        Text(this.testLog)
          .fontSize(10)
          .fontColor('#333333')
          .id('log_text')
      }
      .height(80)
      .width('100%')
      .backgroundColor('#F5F5F5')
      .padding(5)
      .margin({ top: 10 })
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}

