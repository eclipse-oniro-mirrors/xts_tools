import router from '@ohos.router';

@Entry
@Component
struct UiAbilityPage191 {
  @State message: string = 'PageOne (窗口B)';
  @State operationLog: string = '';

  aboutToAppear(): void { this.addLog('窗口B PageOne aboutToAppear'); }
  aboutToDisappear(): void { this.addLog('窗口B PageOne aboutToDisappear'); }
  onPageShow(): void { this.addLog('窗口B PageOne OnPageShow'); }
  onPageHide(): void { this.addLog('窗口B PageOne OnPageHide'); }

  addLog(msg: string): void {
    this.operationLog = `[${new Date().toLocaleTimeString()}] ${msg}\n${this.operationLog}`;
  }

  routerPageTwo(): void {
    this.addLog('push到 PageTwo');
    router.pushUrl({ url: 'testability/pages/UiAbilityPage/UiAbilityPage192' });
  }

  build() {
    Column({ space: 15 }) {
      Text(this.message).fontSize(24).fontWeight(FontWeight.Bold)
      Button('B router pageTwo').onClick(() => this.routerPageTwo()).width('80%')
      Text('在PageTwo侧滑返回').fontSize(14).fontColor(Color.Orange)
      Scroll() {
        Text(this.operationLog).fontSize(12).width('100%').padding(10).backgroundColor('#F5F5F5').borderRadius(5)
      }.width('100%').height('350')
    }.width('100%').height('100%').padding(20)
  }
}

