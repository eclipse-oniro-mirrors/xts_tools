/**
 * 在onIMEInputComplete回调内使用getSelection
 * SUB_ACE_UI_COMPONENT_TEXT_RICHEDITOR_INTERFACE_0102
 */
@Entry
@ComponentV2
export struct RicheditorInterface0102 {
  controller: RichEditorController = new RichEditorController();
  @Local logText: string = '';

  build() {
    Scroll() {
      Column() {
        Text('onIMEInputComplete回调内getSelection测试')
          .fontSize(14)
          .fontWeight(FontWeight.Bold)
          .margin({ top: 10, bottom: 10 })

        Text('SUB_ACE_UI_COMPONENT_TEXT_RICHEDITOR_INTERFACE_0102')
          .fontSize(11)
          .fontColor('#666')
          .margin({ bottom: 15 })

        Text(`日志: ${this.logText}`)
          .fontSize(12)
          .margin({ bottom: 10 })

        RichEditor({ controller: this.controller })
          .width('90%')
          .height(200)
          .border({ width: 1, color: '#ccc' })
          .margin({ bottom: 15 })
          .onIMEInputComplete((value: RichEditorTextSpanResult) => {
            const selection = this.controller.getSelection();
            this.logText = `输入完成，光标位置: [${selection.selection[0]},${selection.selection[1]}]`;
          })

        Button('点击后输入文本')
          .fontSize(12)
          .onClick(() => {
            this.controller.setSelection(10, 10);
            this.logText = '光标已定位，请输入文本';
          })
          .margin({ bottom: 15 })

        Button('测试完成')
          .id('btn')
          .width('80%')
          .onClick(() => {})
          .margin({ bottom: 15 })

        Text('测试说明：')
          .fontSize(12)
          .fontWeight(FontWeight.Bold)
          .margin({ top: 10, bottom: 5 })
          .alignSelf(ItemAlign.Start)

        Text('1. 在onIMEInputComplete回调内使用getSelection\\n2. 在RichEditor中输入内容\\n3. 触发onIMEInputComplete回调')
          .fontSize(10)
          .width('95%')
          .margin({ bottom: 10 })

        Text('预期结果：')
          .fontSize(12)
          .fontWeight(FontWeight.Bold)
          .margin({ top: 5, bottom: 5 })
          .alignSelf(ItemAlign.Start)

        Text('能准确返回选中内容或光标所在span信息（输入后）')
          .fontSize(10)
          .fontColor('#FF6B35')
          .width('95%')
      }
      .width('100%')
      .padding(10)
    }
    .width('100%')
    .height('100%')
  }

  aboutToAppear(): void {
    this.controller.addTextSpan('这是初始文本，请在此输入新内容测试onIMEInputComplete回调。', {
      style: {
        fontColor: Color.Black,
        fontSize: 14
      }
    });
  }
}

