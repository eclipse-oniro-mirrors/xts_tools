@Entry
@ComponentV2
export struct MenuExitLogic0020 {
  @Local testStatus: string = '待测试';

  @Builder
  MenuBuilder() {
    Menu() {
      MenuItem({ content: '菜单项1' }).onClick(() => { this.testStatus = '点击菜单项1'; })
      MenuItem({ content: '菜单项2' }).onClick(() => { this.testStatus = '点击菜单项2'; })
      MenuItem({ content: '菜单项3' }).onClick(() => { this.testStatus = '点击菜单项3'; })
    }
  }

  build() {
    Column({ space: 15 }) {
      Text('ARKUI_COMPONENTFUNCTION_COMMOMATTRIBUTES_MENU_EXITLOGICOPTIMIZATION_0020')
        .fontSize(11)
        .fontWeight(FontWeight.Bold)

      Text('测试：TouchOutSide点击窗口外退出')
        .fontSize(14)
        .fontColor(Color.Gray)

      Divider()

      Text('子窗类型菜单才支持TouchOutSide').fontSize(12).fontColor(Color.Orange)

      Button('长按我')
        .id('triggerBtn')
        .width('60%')
        .height(50)
        .bindContextMenu(this.MenuBuilder, ResponseType.LongPress, { enableArrow: true })

      Column({ space: 5 }) {
        Text('测试步骤：').fontSize(14).fontWeight(FontWeight.Bold).alignSelf(ItemAlign.Start)
        Text('1. 长按按钮弹出菜单').fontSize(12).alignSelf(ItemAlign.Start)
        Text('2. 点击状态栏或导航条（窗口外）').fontSize(12).alignSelf(ItemAlign.Start)
        Text('3. 观察菜单是否关闭').fontSize(12).alignSelf(ItemAlign.Start)
        Text('注：仅子窗类型菜单支持此功能').fontSize(11).fontColor(Color.Gray).alignSelf(ItemAlign.Start)
      }
      .width('100%')
      .padding(10)
      .backgroundColor('#FFF8E1')
      .borderRadius(8)

      Text(`状态：${this.testStatus}`).fontSize(14).fontColor(Color.Blue)

      Text('预期结果：点击状态栏、导航条时菜单关闭')
        .fontSize(13)
        .fontColor(Color.Green)
        .padding(8)
        .backgroundColor('#E8F5E9')
        .borderRadius(8)
    }
    .width('100%')
    .height('100%')
    .padding(20)
    .backgroundColor(Color.White)
  }
}

