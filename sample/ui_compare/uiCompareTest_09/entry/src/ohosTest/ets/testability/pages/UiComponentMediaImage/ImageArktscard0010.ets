/**
 * @tc.name: SUB_ACE_UI_COMPONENT_MEDIA_IMAGE_ARKTSCARD_0010
 * @tc.desc: Image组件在ArkTS卡片中使用媒体框架能力直接解析图片
 * @tc.level: Level 2
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct ImageArktscard0010 {
  @Local testLog: string = '';
  @Local imageLoaded: boolean = false;

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'ImageArktscard0010', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded - ArkTS卡片Image测试');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_MEDIA_IMAGE_ARKTSCARD_0010')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('ArkTS卡片中Image组件使用媒体框架能力')
        .fontSize(12)
        .margin({ bottom: 10 })

      Image($r('app.media.icon'))
        .width(150)
        .height(150)
        .id('image_arktscard')
        .onComplete(() => {
          this.imageLoaded = true;
          this.addLog('图片加载完成');
        })
        .onError(() => {
          this.addLog('图片加载失败');
        })

      Text(this.imageLoaded ? '✓ 图片加载成功' : '加载中...')
        .fontSize(12)
        .fontColor(this.imageLoaded ? '#00AA00' : '#666666')
        .margin({ top: 10 })

      Text('测试说明：')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 15 })

      Text('1. 创建卡片应用\n2. 添加Image组件使用媒体框架能力直接解析图片\n预期: Image组件正常显示图片')
        .fontSize(11)
        .fontColor('#666666')

      Scroll() {
        Text(this.testLog)
          .fontSize(10)
          .fontColor('#333333')
          .id('log_text')
      }
      .height(100)
      .width('100%')
      .backgroundColor('#F5F5F5')
      .padding(5)
      .margin({ top: 10 })
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}

