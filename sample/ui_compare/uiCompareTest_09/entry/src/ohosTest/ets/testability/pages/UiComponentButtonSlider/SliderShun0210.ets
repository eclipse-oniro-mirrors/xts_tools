/**
 * @tc.name: SUB_ACE_UI_COMPONENT_BUTTON_SLIDER_SHUN_0210
 * @tc.desc: Panel组件结合子组件Slider，左右滑动Slider，气泡不避让
 * @tc.level: Level 3
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct SliderShun0210 {
  @Local testLog: string = '';
  @Local sliderValue: number = 100;
  @Local showPanel: boolean = false;

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'SliderShun0210', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_BUTTON_SLIDER_SHUN_0210')
        .fontSize(14)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('Panel结合Slider气泡避让')
        .fontSize(12)
        .margin({ bottom: 10 })

      Button('弹出窗口')
        .id('btn_show_panel')
        .onClick(() => {
          this.showPanel = !this.showPanel;
          this.addLog('showPanel: ' + this.showPanel);
        })

      if (this.showPanel) {
        Column() {
          Text('Panel内Slider')
            .fontSize(12)
            .margin({ bottom: 10 })

          Slider({
            value: this.sliderValue,
            min: 0,
            max: 100,
            style: SliderStyle.OutSet
          })
            .width('80%')
            .id('slider_panel')
            .showTips(true)
            .showSteps(true)
            .onChange((value: number) => {
              this.sliderValue = value;
            })
        }
        .width('100%')
        .height(200)
        .backgroundColor('#E0E0E0')
        .padding(20)
        .margin({ top: 20 })
      }

      Text('Slider在窗口最上方时，气泡不避让')
        .fontSize(11)
        .fontColor('#666666')
        .margin({ top: 20 })
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}

