/**
 * @tc.name: SUB_ACE_UI_COMPONENT_BUTTON_RADIO_CHECKMARK_0020
 * @tc.desc: Radio为勾选类型选中，hover态
 * @tc.level: Level 3
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct RadioCheckmark0020 {
  @Local testLog: string = '';

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'RadioCheckmark0020', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_BUTTON_RADIO_CHECKMARK_0020')
        .fontSize(14)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('勾选类型的Radio选中，hover状态')
        .fontSize(12)
        .margin({ bottom: 10 })

      Row() {
        Radio({ value: 'Radio1', group: 'group1' })
          .checked(true)
          .width(30)
          .height(30)
          .id('radio_tick_checked_hover')
          .onChange((isChecked: boolean) => {
            this.addLog('Radio1 checked: ' + isChecked);
          })
          .onHover((isHover: boolean) => {
            this.addLog('Radio1 hover: ' + isHover);
          })
      }
      .justifyContent(FlexAlign.Center)
      .width('100%')
      .padding(20)

      Text('测试说明：')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20 })

      Text('1. 使用鼠标悬浮在Radio上查看hover效果\n2. Radio应为勾选类型且被选中\n3. 状态应为hover态')
        .fontSize(11)
        .fontColor('#666666')

      Text('日志:')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 10 })

      Scroll() {
        Text(this.testLog)
          .fontSize(10)
          .fontColor('#333333')
          .id('log_text')
      }
      .height(100)
      .width('100%')
      .backgroundColor('#F5F5F5')
      .padding(5)
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}
