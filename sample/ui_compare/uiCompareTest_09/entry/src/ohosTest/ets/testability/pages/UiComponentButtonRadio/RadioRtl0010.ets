/**
 * @tc.name: SUB_ACE_UI_COMPONENT_BUTTON_RADIO_Rtl_0010
 * @tc.desc: 简体中文时，设置direction为Rtl，查看radio显示样式
 * @tc.level: Level 3
 */
import { hilog } from '@kit.PerformanceAnalysisKit';

@Entry
@ComponentV2
struct RadioRtl0010 {
  @Local testLog: string = '';
  @Local selectedValue: string = '';

  private addLog(message: string): void {
    this.testLog += message + '\n';
    hilog.info(0x0000, 'RadioRtl0010', message);
  }

  aboutToAppear(): void {
    this.addLog('Page loaded');
  }

  build() {
    Column() {
      Text('SUB_ACE_UI_COMPONENT_BUTTON_RADIO_Rtl_0010')
        .fontSize(14)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 10 })

      Text('设置direction为Rtl，查看radio显示')
        .fontSize(12)
        .margin({ bottom: 10 })

      Column() {
        Row() {
          Text('选项1')
            .fontSize(12)
          Radio({ value: 'Radio1', group: 'rtlGroup' })
            .checked(false)
            .width(30)
            .height(30)
            .id('radio_rtl_1')
            .onChange((isChecked: boolean) => {
              if (isChecked) {
                this.selectedValue = 'Radio1';
                this.addLog('Selected: Radio1');
              }
            })
        }
        .width('100%')
        .justifyContent(FlexAlign.SpaceBetween)
        .margin({ bottom: 10 })

        Row() {
          Text('选项2')
            .fontSize(12)
          Radio({ value: 'Radio2', group: 'rtlGroup' })
            .checked(false)
            .width(30)
            .height(30)
            .id('radio_rtl_2')
            .onChange((isChecked: boolean) => {
              if (isChecked) {
                this.selectedValue = 'Radio2';
                this.addLog('Selected: Radio2');
              }
            })
        }
        .width('100%')
        .justifyContent(FlexAlign.SpaceBetween)
        .margin({ bottom: 10 })

        Row() {
          Text('选项3')
            .fontSize(12)
          Radio({ value: 'Radio3', group: 'rtlGroup' })
            .checked(false)
            .width(30)
            .height(30)
            .id('radio_rtl_3')
            .onChange((isChecked: boolean) => {
              if (isChecked) {
                this.selectedValue = 'Radio3';
                this.addLog('Selected: Radio3');
              }
            })
        }
        .width('100%')
        .justifyContent(FlexAlign.SpaceBetween)
      }
      .width('80%')
      .padding(15)
      .backgroundColor('#F0F0F0')
      .borderRadius(8)
      .direction(Direction.Rtl)

      Text('当前选中: ' + (this.selectedValue || '无'))
        .fontSize(12)
        .margin({ top: 15 })
        .id('selected_text')

      Text('测试说明：')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 20 })

      Text('1. 页面显示3个radio\n2. direction设置为Rtl\n3. 点击radio测试选择功能')
        .fontSize(11)
        .fontColor('#666666')

      Text('日志:')
        .fontSize(12)
        .fontWeight(FontWeight.Bold)
        .margin({ top: 10 })

      Scroll() {
        Text(this.testLog)
          .fontSize(10)
          .fontColor('#333333')
          .id('log_text')
      }
      .height(80)
      .width('100%')
      .backgroundColor('#F5F5F5')
      .padding(5)
    }
    .width('100%')
    .height('100%')
    .padding(10)
  }
}

