import { LevelMode, ImmersiveMode } from '@kit.ArkUI';
import { router } from '@kit.ArkUI';

@Entry
@Component
struct PopupBoxSpecificationsPageDisplay0430 {
  @State maskEnabled: boolean = false;
  @State alertDialogReady: boolean = false;
  @State showGlobalMask: boolean = false;
  @State autoExecuted: boolean = false;

  aboutToAppear(): void {
    setTimeout(() => {
      this.autoExecuteTest();
    }, 5000);
  }

  autoExecuteTest(): void {
    if (this.autoExecuted) {
      console.info('检测到已自动执行，跳过');
      return;
    }
    this.autoExecuted = true;
    console.info('自动执行: 100%遮罩已启用');
    this.maskEnabled = true;
    this.showGlobalMask = true;
    setTimeout(() => {
      console.info('自动执行: 显示AlertDialog');
      this.showAlertDialog();
    }, 1000);
  }

  showAlertDialog(): void {
    const uiContext = this.getUIContext();
    uiContext.showAlertDialog({
      title: 'AlertDialog测试',
      message: '验证OVERLAY模式下异常ImmersiveMode的行为',
      autoCancel: true,
      primaryButton: {
        value: '确认',
        action: () => {
          console.info('AlertDialog确认按钮被点击');
        }
      },
      secondaryButton: {
        value: '取消',
        action: () => {
          console.info('AlertDialog取消按钮被点击');
        }
      },
      cancel: () => {
        console.info('AlertDialog被取消');
      },
      // 设置OVERLAY模式 + 异常ImmersiveMode
      levelMode: LevelMode.OVERLAY,
      immersiveMode: -888 as ImmersiveMode, // 异常值
      showInSubWindow: false,
      isModal: true,
      maskRect: { x: 0, y: 0, width: '100%', height: '100%' },
      alignment: DialogAlignment.Center,
      offset: { dx: 0, dy: 0 }
    });
  }

  navigateToHome(): void {
    router.pushUrl({
      url: 'testability/pages/PopupBoxSpecificationsPageDisplay/PopupBoxSpecificationsPageDisplay0430'
    }).catch((err: Error) => {
      console.error('导航失败:', err.message);
    });
  }

  build(): void {
    Stack() {
      Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
        Text('PopupBox规格页面显示测试0430')
          .fontSize(20)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 20 })

        Text('测试步骤：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('1. 打开测试hap (已完成)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('2. 设置LevelMode:OVERLAY (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('3. 设置ImmersiveMode设置为异常值 (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Button(this.maskEnabled ? '4. 100%遮罩已启用 ✓' : '4. 点击100%mask')
          .id('button_100_mask')
          .backgroundColor(this.maskEnabled ? Color.Green : Color.Blue)
          .fontColor(Color.White)
          .margin({ top: 10, bottom: 10 })
          .onClick(() => {
            this.maskEnabled = true;
            this.showGlobalMask = true;
            this.autoExecuted = true;
          })

        Button('5. 点击AlertDialog')
          .id('button_alert_dialog')
          .enabled(this.maskEnabled)
          .backgroundColor(this.maskEnabled ? Color.Orange : Color.Gray)
          .fontColor(Color.White)
          .margin({ bottom: 20 })
          .onClick(() => {
            this.autoExecuted = true;
            this.showAlertDialog();
          })

        Text('预期结果：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('dialog节点为全局窗口顶层，遮罩整个窗口')
          .fontSize(14)
          .fontColor(Color.Red)
          .textAlign(TextAlign.Center)
      }
      .width('100%')
      .height('100%')

      // 全局遮罩
      if (this.showGlobalMask) {
        Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
          Text('全局遮罩层')
            .fontSize(24)
            .fontColor(Color.White)
            .margin({ bottom: 20 })

          Button('关闭遮罩')
            .id('button_close_mask')
            .backgroundColor(Color.Red)
            .fontColor(Color.White)
            .margin({ bottom: 10 })
            .onClick(() => {
              this.showGlobalMask = false;
            })

          Button('在遮罩上显示AlertDialog')
            .id('button_show_alertdialog_on_mask')
            .backgroundColor(Color.Orange)
            .fontColor(Color.White)
            .onClick(() => {
              this.showAlertDialog();
            })
        }
        .width('100%')
        .height('100%')
        .backgroundColor('rgba(0, 0, 0, 0.5)')
      }
    }
    .width('100%')
    .height('100%')
  }
}
