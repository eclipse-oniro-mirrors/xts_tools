@Entry
@Component
struct SpecialComponentsUIContextGrayscale0030 {
  private settings: RenderingContextSettings = new RenderingContextSettings(true);
  private context: CanvasRenderingContext2D = new CanvasRenderingContext2D(this.settings);

  build() {
    Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
      Canvas(this.context)
        .width('100%')
        .height('100%')
        .backgroundColor('#ffff00')
        .onReady(() => {
          this.context.fillRect(0, 30, 100, 100)
        })
        .grayscale(-10)

      Canvas(this.context)
        .grayscale(-1)

      Canvas(this.context)
        .grayscale(0)

      Canvas(this.context)
        .grayscale(0.2)

      Canvas(this.context)
        .grayscale(0.5)

      Canvas(this.context)
        .grayscale(0.8)

      Canvas(this.context)
        .grayscale(1)

      Canvas(this.context)
        .grayscale(1.5)

      Canvas(this.context)
        .grayscale(100)
    }
    .width('100%')
    .height('100%')
  }
}
