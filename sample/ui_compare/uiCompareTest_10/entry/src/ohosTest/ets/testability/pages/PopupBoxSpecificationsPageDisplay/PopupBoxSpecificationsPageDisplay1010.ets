import { LevelMode, ImmersiveMode } from '@kit.ArkUI';
import { router } from '@kit.ArkUI';
import { promptAction } from '@kit.ArkUI';

@Entry
@Component
struct PopupBoxSpecificationsPageDisplay1010 {
  @State maskEnabled: boolean = false;
  @State customDialogShown: boolean = false;
  @State showGlobalMask: boolean = false;
  @State autoExecuted: boolean = false;

  aboutToAppear(): void {
    setTimeout(() => {
      this.autoExecuteTest();
    }, 5000);
  }

  autoExecuteTest(): void {
    if (this.autoExecuted) {
      console.info('检测到已自动执行，跳过');
      return;
    }
    this.autoExecuted = true;
    console.info('自动执行: 100%遮罩已启用');
    this.maskEnabled = true;
    this.showGlobalMask = true;
    setTimeout(() => {
      console.info('自动执行: 显示prompt_openCustomDialog');
      this.showCustomDialog();
    }, 1000);
  }

  showCustomDialog(): void {
    try {
      promptAction.openCustomDialog({
        builder: () => {
          this.CustomDialogBuilder();
        },
        alignment: DialogAlignment.Center,
        offset: { dx: 0, dy: 0 },
        autoCancel: true,
        onWillDismiss: (dismissAction) => {
          console.info('prompt_openCustomDialog即将关闭，原因:', dismissAction.reason);
          this.customDialogShown = false;
          return true; // 允许关闭
        }
      });
      this.customDialogShown = true;
    } catch (error) {
      console.error('显示prompt_openCustomDialog失败:', error.message);
    }
  }

  @Builder
  CustomDialogBuilder() {
    Column() {
      Text('prompt_openCustomDialog测试')
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text('验证EMBEDDED模式下EXTEND + 异常levelUniqueId的行为')
        .fontSize(14)
        .textAlign(TextAlign.Center)
        .margin({ bottom: 20 })

      Row() {
        Button('确认')
          .backgroundColor(Color.Blue)
          .fontColor(Color.White)
          .margin({ right: 10 })
          .onClick(() => {
            console.info('prompt_openCustomDialog确认按钮被点击');
            this.customDialogShown = false;
          })

        Button('取消')
          .backgroundColor(Color.Gray)
          .fontColor(Color.White)
          .onClick(() => {
            console.info('prompt_openCustomDialog取消按钮被点击');
            this.customDialogShown = false;
          })
      }
    }
    .padding(20)
    .backgroundColor(Color.White)
    .borderRadius(10)
  }

  navigateToHome(): void {
    router.pushUrl({
      url: 'testability/pages/Index'
    }).catch((err: Error) => {
      console.error('导航失败:', err.message);
    });
  }

  build(): void {
    Stack() {
      Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
        Text('PopupBox规格页面显示测试1010')
          .fontSize(20)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 20 })

        Text('测试步骤：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('1. 打开测试hap (已完成)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('2. 设置LevelMode:EMBEDDED (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('3. 设置ImmersiveMode.EXTEND，设置levelUniqueId为异常值 (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Button(this.maskEnabled ? '4. 100%遮罩已启用 ✓' : '4. 点击100%mask')
          .id('button_100_mask')
          .backgroundColor(this.maskEnabled ? Color.Green : Color.Blue)
          .fontColor(Color.White)
          .margin({ top: 10, bottom: 10 })
          .onClick(() => {
            this.maskEnabled = true;
            this.showGlobalMask = true;
            this.autoExecuted = true;
          })

        Button('5. 点击prompt_openCustomDialog')
          .id('button_prompt_opencustomdialog')
          .enabled(this.maskEnabled)
          .backgroundColor(this.maskEnabled ? Color.Orange : Color.Gray)
          .fontColor(Color.White)
          .margin({ bottom: 20 })
          .onClick(() => {
            this.autoExecuted = true;
            this.showCustomDialog();
          })

        Text('预期结果：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('dialog节点为全局窗口顶层，遮罩整个窗口')
          .fontSize(14)
          .fontColor(Color.Red)
          .textAlign(TextAlign.Center)
      }
      .width('100%')
      .height('100%')

      // 全局遮罩
      if (this.showGlobalMask) {
        Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
          Text('全局遮罩层')
            .fontSize(24)
            .fontColor(Color.White)
            .margin({ bottom: 20 })

          Button('关闭遮罩')
            .id('button_close_mask')
            .backgroundColor(Color.Red)
            .fontColor(Color.White)
            .margin({ bottom: 10 })
            .onClick(() => {
              this.showGlobalMask = false;
            })

          Button('在遮罩上显示prompt_openCustomDialog')
            .id('button_show_prompt_on_mask')
            .backgroundColor(Color.Orange)
            .fontColor(Color.White)
            .onClick(() => {
              this.showCustomDialog();
            })
        }
        .width('100%')
        .height('100%')
        .backgroundColor('rgba(0, 0, 0, 0.5)')
      }
    }
    .width('100%')
    .height('100%')
  }
}