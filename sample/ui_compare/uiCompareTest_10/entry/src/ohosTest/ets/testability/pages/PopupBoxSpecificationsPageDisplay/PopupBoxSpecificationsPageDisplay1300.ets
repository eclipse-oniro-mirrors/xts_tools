import { LevelMode, ImmersiveMode } from '@kit.ArkUI';
import { router } from '@kit.ArkUI';
import { promptAction } from '@kit.ArkUI';

@Entry
@Component
struct PopupBoxSpecificationsPageDisplay1300 {
  @State offsetEnabled: boolean = false;
  @State customDialogShown: boolean = false;
  @State autoExecuted: boolean = false;
  private dialogId: number = -1;

  aboutToAppear(): void {
    setTimeout(() => {
      this.autoExecuteTest();
    }, 5000);
  }

  autoExecuteTest(): void {
    if (this.autoExecuted) {
      console.info('检测到已自动执行，跳过');
      return;
    }
    this.autoExecuted = true;
    console.info('自动执行: 向下偏移已启用');
    this.offsetEnabled = true;
    setTimeout(async () => {
      console.info('自动执行: 显示prompt_openCustomDialog');
      await this.showCustomDialog();
    }, 1000);
  }

  async showCustomDialog(): Promise<void> {
    try {
      this.dialogId = await promptAction.openCustomDialog({
        builder: () => {
          this.CustomDialogBuilder();
        },
        alignment: DialogAlignment.Center,
        offset: { dx: 0, dy: this.offsetEnabled ? 100 : 0 },
        autoCancel: true,
        // 设置异常LevelMode + 异常ImmersiveMode
        levelMode: -999 as LevelMode, // 异常值
        immersiveMode: -888 as ImmersiveMode, // 异常值
        showInSubWindow: true, // 设置为true以支持页面跟随
        isModal: false, // 设置为false以允许页面交互和跟随
        maskRect: { x: 0, y: 0, width: '100%', height: '100%' },
        onWillDismiss: (dismissAction) => {
          console.info('prompt_openCustomDialog即将关闭，原因:', dismissAction.reason);
          this.customDialogShown = false;
          return true; // 允许关闭
        }
      });
      this.customDialogShown = true;
    } catch (error) {
      console.error('显示prompt_openCustomDialog失败:', error.message);
    }
  }

  closeCustomDialog(): void {
    if (this.dialogId !== -1) {
      promptAction.closeCustomDialog(this.dialogId);
      this.customDialogShown = false;
      this.dialogId = -1;
    }
  }

  @Builder
  CustomDialogBuilder() {
    Column() {
      Text('prompt_openCustomDialog测试')
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text('验证异常LevelMode值 + 异常ImmersiveMode值的偏移行为')
        .fontSize(14)
        .textAlign(TextAlign.Center)
        .margin({ bottom: 20 })

      Row() {
        Button('确认')
          .backgroundColor(Color.Blue)
          .fontColor(Color.White)
          .margin({ right: 10 })
          .onClick(() => {
            console.info('prompt_openCustomDialog确认按钮被点击');
            this.closeCustomDialog();
          })

        Button('取消')
          .backgroundColor(Color.Gray)
          .fontColor(Color.White)
          .onClick(() => {
            console.info('prompt_openCustomDialog取消按钮被点击');
            this.closeCustomDialog();
          })
      }
    }
    .padding(20)
    .backgroundColor(Color.White)
    .borderRadius(10)
  }

  @Builder
  customDialogBuilder() {
    Column() {
      Text('prompt_openCustomDialog测试')
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 20 })

      Text('验证异常LevelMode值 + 异常ImmersiveMode值的偏移行为')
        .fontSize(14)
        .textAlign(TextAlign.Center)
        .margin({ bottom: 20 })

      Row() {
        Button('确认')
          .backgroundColor(Color.Blue)
          .fontColor(Color.White)
          .margin({ right: 10 })
          .onClick(() => {
            console.info('CustomDialog确认按钮被点击');
            // 关闭对话框的逻辑由系统处理
          })

        Button('取消')
          .backgroundColor(Color.Gray)
          .fontColor(Color.White)
          .onClick(() => {
            console.info('CustomDialog取消按钮被点击');
            // 关闭对话框的逻辑由系统处理
          })
      }
    }
    .padding(20)
    .backgroundColor(Color.White)
    .borderRadius(8)
    .width('80%')
  }

  navigateToHome(): void {
    router.pushUrl({
      url: 'testability/pages/Index'
    }).catch((err: Error) => {
      console.error('导航失败:', err.message);
    });
  }

  build(): void {
    Column() {
      // 顶部导航栏
      Row() {
        Button('返回首页')
          .id('button_return_home')
          .backgroundColor(Color.Blue)
          .fontColor(Color.White)
          .margin({ left: 10, right: 10 })
          .onClick(() => {
            this.autoExecuted = true;
            this.navigateToHome();
          })

        Blank()

        Text('PopupBox规格页面显示测试1300')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .margin({ right: 20 })
      }
      .width('100%')
      .height(60)
      .backgroundColor('#f0f0f0')
      .padding({ left: 10, right: 10 })

      // 主要内容区域
      Flex({ direction: FlexDirection.Column, alignItems: ItemAlign.Center, justifyContent: FlexAlign.Center }) {
        Text('测试步骤：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('1. 打开测试hap (已完成)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('2. 设置LevelMode:异常值 (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Text('3. 设置ImmersiveMode设置为异常值 (已内置)')
          .fontSize(14)
          .margin({ bottom: 5 })

        Button(this.offsetEnabled ? '4. 向下偏移已启用 ✓' : '4. 点击向下偏移')
          .id('button_offset_down')
          .backgroundColor(this.offsetEnabled ? Color.Green : Color.Blue)
          .fontColor(Color.White)
          .margin({ top: 10, bottom: 10 })
          .onClick(() => {
            this.offsetEnabled = true;
            this.autoExecuted = true;
          })

        Button('5. 点击prompt_openCustomDialog')
          .id('button_custom_dialog')
          .backgroundColor(Color.Orange)
          .fontColor(Color.White)
          .margin({ bottom: 10 })
          .onClick(async () => {
            this.autoExecuted = true;
            await this.showCustomDialog();
          })

        Text('6. 点击最上方的返回首页')
          .fontSize(14)
          .margin({ bottom: 20 })

        Text('预期结果：')
          .fontSize(16)
          .fontWeight(FontWeight.Medium)
          .margin({ bottom: 10 })

        Text('此时dialog遮罩蒙层被设置下移，点击返回首页后，dialog弹窗跟随到首页，点击空白处或者点击按钮能关闭dialog弹窗')
          .fontSize(14)
          .fontColor(Color.Red)
          .textAlign(TextAlign.Center)
          .margin({ left: 20, right: 20 })

        if (this.customDialogShown) {
          Text('CustomDialog已显示')
            .fontSize(14)
            .fontColor(Color.Green)
            .margin({ top: 10 })
        }
      }
      .width('100%')
      .layoutWeight(1)
      .padding(20)
    }
    .width('100%')
    .height('100%')
  }
}