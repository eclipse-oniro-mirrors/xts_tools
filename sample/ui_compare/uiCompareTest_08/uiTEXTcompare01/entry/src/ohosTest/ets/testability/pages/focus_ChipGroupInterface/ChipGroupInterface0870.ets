import { ChipSize, ChipGroup, screen } from '@kit.ArkUI'
import Settings from '../../../test/model/Settings'

@Entry
@Preview
@Component
struct ChipGroupInterface0870 {
  @State selected_index: Array<number> = [0, 1, 2, 3, 4, 5]

  build() {
    Column() {
      Button("横竖屏切换")
        .onClick(()=>{
          Settings.changeWindowOrientation()
        }).margin(10)
      ChipGroup({
        items: [
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项1" },
            suffixIcon: { src: $r('app.media.icon') },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项2" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项3" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项4" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项5" },
            allowClose: false
          },
        ],
        itemStyle: {
          size:ChipSize.NORMAL,
          backgroundColor: Color.Yellow,
          fontColor: Color.Black,
          selectedBackgroundColor: Color.Green,
          selectedFontColor: Color.Red,
        },
        selectedIndexes: this.selected_index,
        multiple: false,
        chipGroupSpace: { itemSpace: 5, endSpace: 0 },
        chipGroupPadding: { top: 10, bottom: 10 },
        onChange: (activatedChipsIndex:Array<number>) => {
          console.log('chips on clicked, activated index ' + activatedChipsIndex)
        },
      }).margin(10)
    }
  }
}
