import { MultiCapsuleSegmentButtonV2, SegmentButtonV2Items } from '@kit.ArkUI';
import promptAction from '@ohos.promptAction';

@Entry
@ComponentV2
struct SegmentButtonV25030 {
  @Local selectedIndexes: number[] = [0];
  @Local buttonItems: SegmentButtonV2Items = new SegmentButtonV2Items([
    { icon: $r('app.media.icon') },
    { icon: $r('app.media.icon') },
    { icon: $r('app.media.icon') }
  ]);

  build() {
    Row() {
      Column() {
        Text('SegmentButtonV2 - 纯image图标测试')
          .fontSize(18)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 10 })

        Text('MultiCapsuleSegmentButtonV2 胶囊型分段按钮（多选）')
          .fontSize(14)
          .fontColor('#666666')
          .margin({ bottom: 20 })

        MultiCapsuleSegmentButtonV2({
          items: this.buttonItems,
          selectedIndexes: this.selectedIndexes!!,
          onItemClicked: (index: number) => {
            if (this.selectedIndexes.includes(index)) {
              this.selectedIndexes = this.selectedIndexes.filter(i => i !== index);
            } else {
              this.selectedIndexes = [...this.selectedIndexes, index];
            }
            promptAction.showToast({
              message: `点击了第${index}个选项`,
              duration: 2000
            });
          }
        })
          .id('segmentButton')
          .width('100%')
          .margin({ bottom: 30 })

        Text('参数配置')
          .fontSize(16)
          .fontWeight(FontWeight.Bold)
          .margin({ bottom: 10 })
          .width('100%')

        Button('纯图标')
          .id('searchButton')
          .width('90%')
          .height(40)
          .margin({ bottom: 10 })
          .onClick(() => {
            // 接口已启用
          })

        Button('重置')
          .id('resetButton')
          .width('80%')
          .height(40)
          .margin({ bottom: 20 })
          .onClick(() => {
            this.selectedIndexes = [0];
          })

        Text('预期：点击这三个图标：放大镜、扫一扫、分享。分别提示第0、1、2个选项被点击。分段按钮正常切换，样式符合UX规范')
          .fontSize(14)
          .fontColor('#FF6600')
          .fontWeight(FontWeight.Bold)
          .margin({ top: 10 })
          .width('100%')
      }
      .width('100%')
      .padding(16)
    }
    .height('100%')
  }
}
