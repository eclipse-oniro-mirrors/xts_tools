import { ChipSize, ChipGroup } from '@kit.ArkUI'

@Entry
@Preview
@Component
struct ChipGroupInterface0890 {
  @State selected_index: Array<number> = [0, 1, 2, 3, 4, 5]
  @State numh:number =0;
  @State numw:number =100;
  build() {
    Column() {

      Button('点击').onClick((event: ClickEvent) => {
        this.numh=100;
        this.numw=0
      }).margin(20)
      ChipGroup({
        items: [
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项1" },
            suffixIcon: { src: $r('app.media.icon') },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项2" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项3" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项4" },
            allowClose: false
          },
          {
            prefixIcon: { src: $r('app.media.icon') },
            label: { text: "选项5" },
            allowClose: false
          },
        ],
        itemStyle: {
          size: { height:this.numh,width:this.numw },
        },
        selectedIndexes: this.selected_index,
        multiple: false,
        chipGroupSpace: { itemSpace: 5, endSpace: 0 },
        chipGroupPadding: { top: 10, bottom: 10 },
        onChange: (activatedChipsIndex:Array<number>) => {
          console.log('chips on clicked, activated index ' + activatedChipsIndex)
        },
      }).margin(20)

    }
  }
}
