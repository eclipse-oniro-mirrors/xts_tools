      {
        "name": "MainAbility",
        "srcEntry": "./ets/MainAbility/MainAbility.ets",
        "description": "$string:MainAbility_desc",
        "icon": "$media:icon",
        "label": "$string:MainAbility_label",
        "startWindowIcon": "$media:icon",
        "startWindowBackground": "$color:white",
        "priority": 5,
        //        "visible": true,
        "exported": true,
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "ohos.want.action.home"
            ]
          }
        ]
      },
      {
        "name": "JumpAbility",
        "srcEntry": "./ets/JumpAbility/JumpAbility.ts",
        "description": "$string:TestAbility_desc",
        "icon": "$media:icon",
        "label": "$string:TestAbility_label",
        "startWindowIcon": "$media:icon",
        "startWindowBackground": "$color:white",
        "visible": true
      }
    ],
    "requestPermissions": [
      {
        "name": "ohos.permission.START_ABILITIES_FROM_BACKGROUND"
      },
      {
        "name": "ohos.permission.ABILITY_BACKGROUND_COMMUNICATION"
      },
      {
        "name": "ohos.permission.INTERACT_ACROSS_LOCAL_ACCOUNTS"
      },
      {
        "name": "ohos.permission.GET_BUNDLE_INFO_PRIVILEGED"
      },
      {
        "name": "ohos.permission.GET_BUNDLE_INFO"
      }
    ],
    "extensionAbilities": [
      {
        "name": "FormAbility",
        "srcEntry": "./ets/FormAbility/FormAbility.ts",
        "label": "$string:form_FormAbility_label",
        "description": "$string:form_FormAbility_desc",
        "type": "form",
        "metadata": [
          {
            "name": "ohos.extension.form",
            "resource": "$profile:form_config"
          }
        ]
      },
      {
        "name": "ServiceExtAbility",
        "icon": "$media:icon",
        "description": "service",
        "type": "service",
        "visible": true,
        "srcEntry": "./ets/ServiceExtAbility/ServiceExtAbility.ts"
      },
      {
        "name": "DataShareExtAbility",
        "srcEntry": "./ets/DataShareExtensionAbility/DataShareExtAbility.ts",
        "icon": "$media:icon",
        "description": "$string:DataShareExtensionAbility_desc",
        "type": "dataShare",
        "uri": "datashare://ohos.samples.stagemodel.DataShare",
        "visible": true
      }
